{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@services/*": ["src/services/*"],
			"@controllers/*": ["src/controllers/*"],
			"@models/*": ["src/models/*"],
			"@config/*": ["src/config/*"],
			"@types/*": ["src/types/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}